<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <!--id采用版本命名，这样打包的tar.gz就会携带版本信息 -->
    <id>1.1.006</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.build.directory}/dest/conf/</directory>
            <outputDirectory>leech/conf</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.build.directory}/dest/bin/</directory>
            <outputDirectory>leech/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.build.directory}/dest/lib/</directory>
            <outputDirectory>leech/lib</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.build.directory}/dest/dylib/</directory>
            <outputDirectory>leech/dylib</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
</assembly>
